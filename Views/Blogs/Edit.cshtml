@model FieldP3_PersonalWebsite.Models.Blog

@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-center">@Html.DisplayFor(model => model.EntryTitle) <a asp-action="Delete" asp-route-id="@Model.BlogId">Delete</a> </h2>    
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BlogId" />
            <h4>Title</h4>
            <div class="form-group">
                <input asp-for="EntryTitle" class="form-control" />
                <span asp-validation-for="EntryTitle" class="text-danger"></span>
            </div>
            <h4>Description</h4>
            <div class="form-group">
                <input asp-for="EntryDesc" class="form-control" />
                <span asp-validation-for="EntryDesc" class="text-danger"></span>
            </div>
            <h4>Content</h4>
            <div class="form-group">
                <input asp-for="EntryContent" class="form-control" />
                <span asp-validation-for="EntryContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" /><br />
            </div>
        </form>
    </div>
</div>
<a asp-action="Index">Back to List</a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
