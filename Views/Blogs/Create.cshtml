@model FieldP3_PersonalWebsite.Models.Blog

@{
    ViewData["Title"] = "Create";
}

<br />
<h3 class="text-center">Create a Blog Post</h3>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>
                Title
            </p>
            <div class="form-group">               
                <input asp-for="EntryTitle" class="form-control" />
                <span asp-validation-for="EntryTitle" class="text-danger"></span>
            </div>
            <p>
                Description
            </p>
            <div class="form-group">
                <input asp-for="EntryDesc" class="form-control" />
                <span asp-validation-for="EntryDesc" class="text-danger"></span>
            </div>
            <p>
                Content
            </p>
            <div class="form-group">
                <input asp-for="EntryContent" class="form-control" />
                <span asp-validation-for="EntryContent" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
